{
    "compilerOptions": {
        "target": "ES2020",
        "outDir": "dist",
        "module": "commonjs",
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "types": ["jest", "node"],
        "skipLibCheck": true
    },
    "exclude": [
        "**/*.fixture.ts",
        "**/*.spec.ts"
    ],
    "include": ["src/**/*"]
}
